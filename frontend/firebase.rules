rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() { return request.auth != null; }
    function isOwner(userId) { return request.auth != null && request.auth.uid == userId; }

    match /users/{userId} {
      allow create: if isOwner(userId);
      allow read: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if false; // Prevent deletion for now
    }
  }
}

// After introducing admin roles via custom claims you can expand:
// allow read: if isOwner(userId) || request.auth.token.role == 'admin';